---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import TitleSection from "@/components/TitleSection.astro";

import en from "../language/en.json";
import es from "../language/es.json";
import ImageSlider from "@/components/ImageSlider.astro";

const lang = Astro.cookies.get("lang")?.value || "en";
const index = lang === "es" ? es.INDEX : en.INDEX;
const hero = lang === "es" ? es.HERO : en.HERO;
---

<Layout
  title="Porfolio de David Uribe"
  description="Hire David Uribe to build your next web or mobile app. A frontend developer specializing in React, TypeScript, MySQL, and React Native. Passionate about creating unique user experiences and sharing knowledge as a content creator to help others grow in tech"
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero title={hero.title} about={hero.description} />
    </SectionContainer>
  </main>
  <div class="space-y-12">
    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        {index.section1}
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <TitleSection>
        <Briefcase class="size-8" />
        {index.section2}
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="certificados">
      <TitleSection>
        <ProfileCheck class="size-8" />
        {index.section3}
      </TitleSection>
      <ImageSlider
        images={[
          { src: "/certificados/globant/Advance_TC_Desing_Techniques.png", alt: "Advance TC Design Techniques" },
          { src: "/certificados/globant/Boinas_Green.png", alt: "Boinas Green" },
          { src: "/certificados/globant/DB_Testing.png", alt: "DB Testing" },
          { src: "/certificados/globant/Defect_Managment.png", alt: "Defect Management" },
          { src: "/certificados/globant/Exploratory_Testing.png", alt: "Exploratory Testing" },
          { src: "/certificados/globant/Testing_Estimation.png", alt: "Testing Estimation" },
          { src: "/certificados/globant/Web_Accessibility.png", alt: "Web Accessibility" }
        ]}
        seeAllLink="/certificates"
        more={index.seeAllCertificates}
      />  
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8" />
        {index.section4}
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </div>
</Layout>
